---
import { NEWSLETTER_CONFIG } from '../consts';
---

<div class="w-full max-w-2xl mx-auto my-14">
	<div class="relative overflow-hidden rounded-lg bg-white/90 p-6 pt-7 pr-7 pb-7 pl-8 dark:bg-primary-900/60 backdrop-blur-sm transition-all duration-300 shadow-[0_2px_10px_rgba(0,0,0,0.03)] sm:p-8 sm:pl-10">
		<div class="absolute left-0 top-0 h-full w-[3px] bg-gradient-to-b from-primary-300/40 via-primary-400/10 to-transparent dark:from-primary-700/20 dark:via-primary-800/5"></div>

		<div class="relative">
			<div class="mb-6 max-w-md">
				<h2
					class="text-lg sm:text-xl font-medium text-primary-950 dark:text-primary-100 transition-colors duration-300 font-primary mb-2.5 tracking-tight"
					set:html={NEWSLETTER_CONFIG.title}
				/>
				<p
					class="text-xs sm:text-sm text-primary-500 dark:text-primary-400 transition-colors duration-300"
					set:html={NEWSLETTER_CONFIG.description}
				/>
			</div>

			<form class="flex flex-col sm:flex-row gap-3">
				<div class="flex-1">
					<input
						type="email"
						required
						placeholder={NEWSLETTER_CONFIG.placeholderText}
						class="w-full px-4 py-3 rounded-lg bg-primary-50 dark:bg-primary-800/40 border border-primary-100 dark:border-primary-800/60 focus:border-primary-400/50 dark:focus:border-primary-700/30 focus:outline-none text-primary-900 dark:text-primary-200 placeholder:text-primary-400 dark:placeholder:text-primary-500 text-sm transition-all duration-300"
					/>
				</div>
				<button
					type="submit"
					class="px-6 py-3 bg-primary-900 text-white dark:bg-primary-200 dark:text-primary-900 rounded-lg font-medium transition-all duration-300 hover:bg-primary-800 dark:hover:bg-white text-sm cursor-pointer"
				>
					{NEWSLETTER_CONFIG.buttonText}
				</button>
			</form>
		</div>

		<div class="absolute top-0 right-0 -mt-12 -mr-12 h-32 w-32 rounded-full bg-gradient-to-r from-primary-100/10 via-primary-100/15 to-transparent dark:from-primary-800/5 dark:via-primary-800/5 blur-2xl opacity-70" />
	</div>
</div>

<style>
	@keyframes blob {
		0% {
			transform: translate(0px, 0px) scale(1);
		}
		33% {
			transform: translate(20px, -20px) scale(1.1);
		}
		66% {
			transform: translate(-20px, 20px) scale(0.9);
		}
		100% {
			transform: translate(0px, 0px) scale(1);
		}
	}

	.animate-blob {
		animation: blob 7s infinite;
	}

	.animation-delay-2000 {
		animation-delay: 2s;
	}
</style>
