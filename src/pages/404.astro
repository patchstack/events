---
import Layout from '../layouts/Layout.astro';
import DarkModeToggle from '../components/DarkModeToggle.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Not Found | LINKK">
	<main class="min-h-screen px-4 flex flex-col">
		<div class="absolute top-12 sm:top-16 w-full flex justify-center">
			<DarkModeToggle />
		</div>

		<div class="flex-1 flex items-center justify-center">
			<div class="max-w-xl mx-auto text-center">
				<h1 class="text-4xl sm:text-5xl font-bold font-primary mb-4 text-primary-900 dark:text-white">
					Oops! Not Found
				</h1>
				<p class="text-xl sm:text-2xl font-primary text-primary-900 dark:text-white mb-8">
					404 - This page took a wrong turn
				</p>
				<p class="text-primary-600 dark:text-primary-400 mb-8">
					The page you're looking for seems to have wandered off. Let's get you back on track.
				</p>
				<a
					href="/"
					class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary-900 dark:bg-white dark:text-primary-900 rounded-lg hover:opacity-90 transition-opacity"
				>
					Back Home
				</a>
			</div>
		</div>

		<div class="py-8">
			<Footer />
		</div>
	</main>
</Layout>
