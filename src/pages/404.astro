---
import Layout from '../layouts/Layout.astro';
import DarkModeToggle from '../components/DarkModeToggle.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Not Found">
	<main class="min-h-screen px-4 flex flex-col">

		<div class="flex-1 flex items-center justify-center">
			<div class="max-w-xl mx-auto text-center">
				<h1 class="text-4xl sm:text-5xl font-bold font-primary mb-4 text-primary-900 dark:text-white">
					Oops! Not Found
				</h1>
				<p class="text-xl sm:text-2xl font-primary text-primary-900 dark:text-white mb-8">
					404 - This page took a wrong turn
				</p>
				<p class="text-primary-600 dark:text-primary-400 mb-8">
					The page you're looking for seems to have wandered off. Let's get you back on track.
				</p>
				
			</div>
		</div>

		<div class="py-8">
			<Footer />
		</div>
	</main>
</Layout>
